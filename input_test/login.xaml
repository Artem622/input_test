<Page x:Class="input_test.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:input_test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">

    <Grid>
        <Label Content="Введи логин" HorizontalAlignment="Left" Margin="100,80,0,0" VerticalAlignment="Top" Background="#FFD8A7A7" Width="388" Grid.Column="1"/>
        <Label Content="Введи пароль" HorizontalAlignment="Left" Margin="100,223,0,0" VerticalAlignment="Top" Background="#FFD8A7A7" Width="388" Grid.Column="1"/>
        <TextBox x:Name ="textBox_login" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="100,130,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="388" Height="34"/>
        <PasswordBox x:Name="password" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="100,279,0,0" VerticalAlignment="Top" Width="388" Height="34"/>
        <Button x:Name="enter" Click="enter_Click"  Content="Войти" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="568,147,0,0" VerticalAlignment="Top" Width="50" Height="100"/>
    </Grid>
</Page>
